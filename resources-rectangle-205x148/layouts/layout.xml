<layout id="WatchFace">
    <drawable
      id="background"
    />
    <bitmap
      id="BatteryLogo"
      x="5%"
      y="0%"
      filename="../drawables/batteryIcon.png"
    />
    <label
      id="BatteryPercentageLabel"
      x="20%"
      y="1%"
      font="Graphics.FONT_TINY"
      justification="Graphics.TEXT_JUSTIFY_LEFT"
      color="Graphics.COLOR_BLACK"
    />
    <label
      id="TimeLabel"
      x="5%"
      y="15%"
      font="Graphics.FONT_MEDIUM"
      justification="Graphics.TEXT_JUSTIFY_LEFT"
      color="Graphics.COLOR_BLACK"
    />
    <label id="DateLabel"
      x="5%"
      y="30%"
      font="Graphics.FONT_TINY"
      justification="Graphics.TEXT_JUSTIFY_LEFT"
      color="Graphics.COLOR_BLACK"
    />
    <bitmap
      id="RunningFitLabLogo"
      x="center"
      y="center"
      filename="../drawables/RunningFitLab-170x126.png"
    />
</layout>